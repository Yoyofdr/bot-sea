# ============================================
# CONFIGURACIÓN SEIA MONITOR
# ============================================

# URL base del SEIA - Búsqueda de proyectos aprobados
SEIA_BASE_URL=https://seia.sea.gob.cl/busqueda/buscarProyectoResumen.php

# ============================================
# SCRAPING
# ============================================

# Modo de scraping: auto (recomendado) | requests | playwright
# NOTA: Para proyectos aprobados se recomienda 'playwright' o 'auto'
SCRAPE_MODE=auto

# Timeout para requests (segundos)
REQUEST_TIMEOUT=45

# Ejecutar Playwright en modo headless (true recomendado en producción)
PLAYWRIGHT_HEADLESS=true

# Máximo de páginas a procesar (1 = solo primera página con 100 proyectos más recientes)
MAX_PAGES=1

# Máximo de proyectos por ejecución (protección)
MAX_PROJECTS_PER_RUN=10000

# ============================================
# BASE DE DATOS
# ============================================

# Ruta a la base de datos SQLite
DB_PATH=data/seia_monitor.db

# ============================================
# NOTIFICACIONES POR EMAIL
# ============================================

# Habilitar notificaciones por email
EMAIL_ENABLED=true

# Configuración del servidor SMTP
EMAIL_HOST=apprelay.lanbye.cl
EMAIL_PORT=25
EMAIL_USE_TLS=false

# Credenciales de autenticación
EMAIL_USER=noresponder@bye.cl
EMAIL_PASSWORD=tu_contraseña_aqui

# Correo del remitente (si está vacío, usa EMAIL_USER)
EMAIL_FROM=noresponder@bye.cl

# Destinatarios (separados por comas si son múltiples)
EMAIL_TO=destinatario1@example.com,destinatario2@example.com,destinatario3@example.com

# ============================================
# SCHEDULER
# ============================================

# Zona horaria (América/Santiago para Chile)
TIMEZONE=America/Santiago

# Hora de ejecución diaria (formato HH:MM)
SCHEDULE_TIME=08:00

# ============================================
# LOGGING
# ============================================

# Nivel de log: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=logs/seia_monitor.log

# Rotación de logs (MB)
LOG_MAX_BYTES=10485760

# Número de archivos de backup
LOG_BACKUP_COUNT=5
